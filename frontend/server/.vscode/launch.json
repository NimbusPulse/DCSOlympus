{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Server (DCS)",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "args": ["--config",  "${input:enterDir}/Config/olympus.json"],
            "program": "./bin/www",
            "preLaunchTask": "check-setup"
        }, 
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Server (No DCS)",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "args": ["--config",  "${input:enterDir}/Config/olympus.json"],
            "program": "./bin/www",
            "preLaunchTask": "demo-server"
        }
    ], 
    "inputs": [
        {
          "id": "enterDir",
          "type": "command",
          "command": "extension.commandvariable.promptStringRemember",
          "args": {
            "key": "dir",
            "description": "DCS Saved Games folder (leave default for mock dcs)",
            "default": "../../mock-dcs"
          }
        }
    ]
}